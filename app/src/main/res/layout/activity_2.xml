<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity3"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="603dp"
        app:srcCompat="@drawable/safelocktitle" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="364dp"
        android:layout_marginLeft="10sp"

        android:layout_marginTop="200sp"
        android:layout_marginRight="10sp"
        android:columnCount="2"
        android:rowCount="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/c1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="20sp"
            app:cardBackgroundColor="#DAD9D4"
            app:cardCornerRadius="20sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:paddingTop="5dp"
                android:text="NOTIFICATION"
                android:textAlignment="center"
                android:textColor="#121111"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_baseline_notifications_24" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/c2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="20sp"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="20sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:paddingTop="5dp"
                android:text="DOOR CONTROL"
                android:textAlignment="center"
                android:textColor="#1E1D1D"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_baseline_sensor_door_24" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/c3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="20sp"

            app:cardBackgroundColor="#A1EFEF"
            app:cardCornerRadius="20sp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:paddingTop="5dp"
                android:text="ALERT"
                android:textAlignment="center"
                android:textColor="#171717"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_baseline_warning_24" />
        </androidx.cardview.widget.CardView>


    </GridLayout>
</RelativeLayout>